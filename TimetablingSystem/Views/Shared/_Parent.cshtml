<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Timetabling System</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/parentCSS")
        @Styles.Render("~/Content/themes/base/jquery.ui.progressbar.css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
    </head>
    <body>
        
        <div style="font-size:14px;" id="mainWrapper">
            <header>

                <div class="headerWrapper">
                    
                    <img id="lboroLogo" src="~/Images/LboroLogo.png" alt="Loughborough University Logo" />

                    <div id="userTextContainer">
                        <div id="userText"></div>
                    </div>
                    

                    <div id="logoutBtn">
                        @Html.ActionLink("Log Out", "SignOut", "User")
                    </div>
                    
                    <div id="progressContainer">
                        <span id="roundInfo">Current Round: 3</span>
                        <div id="progressbar"></div>
                        <span id="progressText">40 day left until Round Ends</span>
                    </div>

                    <div id="accessibilityContainer">
                        <table>
                            <tr>
                                <td><img id="enlargeText" src="~/Images/plusbutton.png" alt="Enlarge Text" onclick="changeFontSize('mainWrapper','2')" /></td>
                                <td><img id="default" src="~/Images/default.png" alt="default" onclick="defaultFont('mainWrapper');" /></td>
                                <td style="padding-right: 5px;"><img id="shrinkText" src="~/Images/minusbutton.png" alt="Shrink Text" onclick="changeFontSize('mainWrapper','-2')" /></td>
                                <td style="padding-left: 5px; border-left: solid 2px lightgrey;"><img id="contrast" src="~/Images/contrast.png" alt="contrast" onclick="negativar()" /></td>
                            </tr>
                        </table>
                    </div>

                </div>

            </header>

            <nav id="navSection">
                <ul id="menuLinks">
                    <li>@Html.ActionLink("Home", "Home", "Main")</li>
                    <li>@Html.ActionLink("Add", "Add", "Main", null, new { id = "addPageBtn" })</li>
                    <li>@Html.ActionLink("Requests", "Requests", "Display", null, new { id = "requestsPageBtn" })</li>
                    <li>@Html.ActionLink("Results", "Results", "Display")</li>
                    <li>@Html.ActionLink("Bookings", "Bookings", "Display", null, new { id = "bookingsPageBtn" })</li>
                    <li>@Html.ActionLink("History", "History", "Display")</li>
                    <li>@Html.ActionLink("Room Availability", "RoomAvailability", "Display", null, new { id = "roomAvailPageBtn" })</li>
                    <li>@Html.ActionLink("Settings", "Settings", "Main")</li>
                </ul>
            </nav>


            <div id="contentDiv">
                @RenderBody()
            </div>

            @RenderSection("scripts", required: false)

        </div>

    </body>

    @Scripts.Render("~/bundles/parent")

</html>
