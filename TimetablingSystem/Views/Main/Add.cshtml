    <div id="roomList">
    </div>
    <input type='button' value='clear selection' onclick='clearRoomSel()'>
    <input type='button' value='sort by capacity' onclick='sortRooms()'>
    <div id="chosenRoomsList">
    Chosen rooms: <br>
    </div>
  </div>
</div>
