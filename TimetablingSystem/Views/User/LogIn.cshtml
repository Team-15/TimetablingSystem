@model TimetablingSystem.Models.UserModel

@{
    Layout = "~/Views/Shared/_AuthorizeView.cshtml";
    ViewBag.Title = "Login";
}

<h2>Timetabling System Login</h2>

@using (Html.BeginForm("LogIn", "User", FormMethod.Post)) { 
    
    <div>

        <fieldset>

            <legend></legend>
            <div>@Html.Label("Username")</div>
            <div>
                @Html.TextBoxFor(user => user.username)
            </div>

            <div>@Html.Label("Password")</div>
            <div>
                @Html.PasswordFor(user => user.password)
                @Html.ValidationMessageFor(user => user.password)
            </div>

            <input type="submit" name="Login" value="Log In" />

        </fieldset>

    </div>
    
}