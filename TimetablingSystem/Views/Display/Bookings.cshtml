@{
    ViewBag.Title = "Bookings";
}

<div id="filtersContainer" class="filtersContainer">

    <div class="filterGroup">
        <div><input type="radio" name="requestTypeRadio" value="current" id="current" checked /><label class="btn filterBtn" for="current"> Current </label></div>
        <div><input type="radio" name="requestTypeRadio" value="adHoc" id="adHoc" /><label class="btn filterBtn" for="adHoc"> Ad-Hoc</label></div>
    </div>

    <div class="filterGroup">
        <div><input type="radio" name="timeRadio" value="time" id="time" checked /><label class="btn filterBtn" for="time"> Time </label></div>
        <div><input type="radio" name="timeRadio" value="periods" id="periods" /><label class="btn filterBtn" for="periods"> Periods </label></div>
    </div>

    <div class="filterGroup">
        <div id="modulelist"></div>
        <div id="buildinglist"></div>
        <div id="roomslist"></div>
    </div>

    <div  class="filterGroup">
        <div id="weeklist"></div>
        <div id="dayslist"></div>
    </div>

    <div class="filterGroup">
        <div><input type="radio" name="displayRadio" value="list" id="list" checked /><label class="btn filterBtn" for="list"> List View </label></div>
        <div><input type="radio" name="displayRadio" value="graphical" id="graphical" /><label class="btn filterBtn" for="graphical"> Graphical View </label></div>
    </div>

    <div class="filterGroup">
        <div><input type="radio" name="departmentRadio" value="allDepartments" id="allDepartments" checked /><label class="btn filterBtn" for="allDepartments"> All Departments </label></div>
        <div><input type="radio" name="departmentRadio" value="myDepartments" id="myDepartments" /><label class="btn filterBtn" for="myDepartments"> My Departments </label></div>
        <div><input type="radio" name="departmentRadio" value="otherDepartments" id="otherDepartments" /><label class="btn filterBtn" for="otherDepartments"> Other Departments </label></div>
    </div>

</div>

<div id="displaysContainer" class="displaysContainer">

</div>













@Scripts.Render("~/bundles/bookings")