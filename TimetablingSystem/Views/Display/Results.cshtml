@{
    ViewBag.Title = "Results";
}

<div id="filtersContainer" class="filtersContainer">

    <div class="filterGroup">
        <div><input type="radio" name="timeRadio" value="time" id="time" checked /><label class="btn filterBtn" for="time"> Time </label></div>
        <div><input type="radio" name="timeRadio" value="periods" id="periods" /><label class="btn filterBtn" for="periods"> Periods </label></div>
    </div>

    <div class="filterGroup">
        <div id="modulelist"></div>
        <div id="buildinglist"></div>
        <div id="roomslist"></div>
    </div>

    <div  class="filterGroup">
        <div id="weeklist"></div>
        <div id="dayslist"></div>
        <div id="statuslist"></div>
    </div>
    
    <div class="filterGroup">
        <div><input type="radio" name="displayRadio" value="list" id="list" checked /><label class="btn filterBtn" for="list"> List View </label></div>
        <div><input type="radio" name="displayRadio" value="graphical" id="graphical" /><label class="btn filterBtn" for="graphical"> Graphical View </label></div>
    </div>

</div>

<div id="displaysContainer" class="displaysContainer">

</div>

@Scripts.Render("~/bundles/results")